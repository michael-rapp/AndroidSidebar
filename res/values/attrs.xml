<resources>

    <declare-styleable name="Sidebar">
        <attr name="android:background" />
        <attr name="contentView" format="reference" />
        <attr name="sidebarView" format="reference" />
        <attr name="showSidebar" format="boolean" />
        <attr name="location" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="animationDuration" format="integer" />
        <attr name="sidebarWidth" format="integer" />
        <attr name="maxSidebarWidth" format="integer" />
        <attr name="sidebarOffset" format="integer" />
        <attr name="maxSidebarOffset" format="integer" />
        <attr name="scrollRatio" format="float" />
        <attr name="dragMode" format="enum">
            <enum name="both" value="0" />
            <enum name="sidebar_only" value="1" />
            <enum name="content_only" value="2" />
            <enum name="disabled" value="3" />
        </attr>
        <attr name="dragThreshold" format="float" />
        <attr name="dragSensitivity" format="integer" />
        <attr name="hideOnBackButton" format="boolean" />
        <attr name="hideOnContentClick" format="boolean" />
        <attr name="showOnSidebarClick" format="boolean" />
        <attr name="contentOverlayColor" format="color" />
        <attr name="contentOverlayTransparency" format="float" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowWidth" format="integer" />
    </declare-styleable>

</resources>